<%- include('../../partials/header'); -%>


<h1 class=" text-center" style="margin:120px 0px 50px 20px  ;color:white">CHANGE PASSWORD</h1>




<div class="container container-addd-user">
    <div class="card card-filter mx-auto">
        <h5 class="card-header card-header-filter">
            <% if(pesanKesalahan.length>0){%>
                <div class="container container-alertsc">
                <div style="margin-left: 30%;" class="alert-bad alert alert-danger" role="alert">
                    <a class="btn-bad" href="/profile/password">X</a>
                    <h4 class="alert-heading">Error!</h4>
                    <%=pesanKesalahan %> 
                  </div>
                </div>
               <% } %>
        
               <% if(pesanKeberhasilan.length>0){%>
                <div class="container container-alertsc">
                <div style="margin-left: 30%;" class="alert-good alert alert-success" role="alert">
                    <a class="btn-good" href="/profile/password">X</a>
                    <h4 class="alert-heading">Succes!</h4>
                    <%=pesanKeberhasilan %> 
                  </div>
                </div>
               <% } %>
            <div class="card-body">
                <form class="form-filter" method="POST">

                    <div class="form-group row">
                        <label for="newPassword" class="col-sm-3 col-form-label">Password</label>
                        <div class="col-sm-8">
                            <input type="password" id="newPassword" name="newPassword"
                                class="form-control form-control-lg" placeholder="Password" required>
                        </div>
                    </div>

                    

                        <div class="form-group row">
                            <label for="rePassword" class="col-sm-3 col-form-label">Retype Password</label>
                            <div class="col-sm-8">
                                <input type="password" id="rePassword" name="rePassword"
                                    class="form-control form-control-lg" placeholder="Retype Password" required>
                            </div>
                        </div>

                   
                    <!-- position -->
                  
                    <div class="form-group row cont-btn" >
                        <button type="submit" name="search" style="margin-right: 2%;" value="clicked"
                            class=" btn btn-success btn-lg btn-add-user">Update</button>
                        <a href="/profile" name="kembali" value="clicked"
                            class=" btn btn-primary btn-lg btn-add-user">
                            Kembali</a>
                    </div>



                </form>

            </div>
    </div>
</div>





<%- include('../../partials/footer'); -%>
