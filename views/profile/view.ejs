<%- include('../partials/header'); -%>


<section id="filter"  style="margin-left:18%;width: 80%;" >

    <h1 style="margin:0% 0% 2% 35% ; color: white;">PROFILE </h1>
    <% if(pesanKesalahan.length>0){%>
        <div class="container container-alertsc">
        <div class="alert-bad alert alert-danger" role="alert">
            <a class="btn-bad" href="/profile">X</a>
            <h4 class="alert-heading">Error!</h4>
            <%=pesanKesalahan %> 
          </div>
        </div>
       <% } %>

       <% if(pesanKeberhasilan.length>0){%>
        <div class="container container-alertsc">
        <div class="alert-good alert alert-success" role="alert">
            <a class="btn-good" href="/profile">X</a>
            <h4 class="alert-heading">Succes!</h4>
            <%=pesanKeberhasilan %> 
          </div>
        </div>
       <% } %>
     
    <div class="container card-profile">
        <div class="card card-filter mx-auto">
            <h5 class="card-header card-header-filter">
                <div class="title-filter">
                    <h5 style="margin-left: 25%;">Edit Profile</h5>
                </div>
                <div class="card-body">
                    <form class="form-filter" action="/profile" method="POST">

                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label col-form-label-lg">Name</label>
                            <div class="col-sm-8">
                                <input type="text" id="inputEmail"
                                    class="input-disable form-control form-control-lg bg-secondary" value="<%=name %>"
                                    placeholder="Email" disabled>
                            </div>
                        </div>
                        
                        <!-- email -->
                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
                            <div class="col-sm-8">
                                <input type="text" id="inputEmail"
                                    class="input-disable form-control form-control-lg bg-secondary" value="<%=email %>"
                                    placeholder="Email" disabled>
                            </div>
                        </div>

                        <!-- password -->
                        <div class="form-group row">
                            <label for="inputPassword"
                                class="col-sm-2 col-form-label col-form-label-lg">Password</label>
                            <div class="col-sm-8 ">
                                <!-- <input type="password" id="inputPassword" name="password" class="form-control form-control-lg"
                                    placeholder="Password" > -->
                                    <a style="margin-top: 2%; border-radius:20px" href="/profile/password" class=" btn btn-warning">Change Password</a>
                            </div>
                        </div>
                        
                        <!-- Position -->

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label col-form-label-lg">Position</label>
                            <div class="col-sm-8 radios">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio1" name="customRadio" value="manager"
                                        class="custom-control-input" <%=role.toLowerCase().includes("manager") ? 'checked' :"" %> >
                                    <label class="custom-control-label" for="customRadio1">Manager</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio2" name="customRadio" value="softwareDeveloper"
                                        class="custom-control-input" <%=role.toLowerCase().includes("software") ? 'checked' :"" %> > 
                                    <label class="custom-control-label" for="customRadio2">Software Developer</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio3" name="customRadio" value="qualityAssurance"
                                        class=" custom-control-input" <%=role.toLowerCase().includes("quality") ? 'checked' :"" %> >
                                    <label class="custom-control-label" for="customRadio3">Quality Assurance</label>
                                </div>

                            </div>
                        </div>

                        <!-- Partime/fulltime -->
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label col-form-label-lg">Type</label>
                            <div class="col-sm-8 radios">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio4" name="customRadioType" value="fulltime"
                                        class="custom-control-input" <%=type.toLowerCase() ==='fulltime'.toLowerCase() ? 'checked' :"" %> >
                                    <label class="custom-control-label" for="customRadio4">Fulltime</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio5" name="customRadioType" value="parttime"
                                        class="custom-control-input" <%=type.toLowerCase() ==='parttime'.toLowerCase() ? 'checked' :"" %>>
                                    <label class="custom-control-label" for="customRadio5">Partime</label>
                                </div>


                            </div>
                        </div>

                        <div class="form-group row container-search">
                            <button type="submit" name="update" value="clicked"
                                class=" btn btn-success btn-lg btn-profile">Update</button>
                            <a href="/projects" name="kembali" value="clicked"
                                class=" btn btn-primary btn-lg btn-profile"> Kembali</a>

                        </div>


                    </form>

                </div>
        </div>
    </div>

</section>

<%- include('../partials/footer'); -%>