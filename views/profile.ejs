    <a class="navbar-brand" href="#"><img class="mb-4" src="/images/faviconwhite.ico" alt="" width="42" height="42">
        Project Management System</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/projects">Projects</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile <span class="sr-only">(current)</span></a>
            </li>


        </ul>
        <a href="/logout" class="btn btn-logout btn-lg btn-danger my-2 my-sm-0"> logout</a>
    </div>
</nav>

<section id="filter">

    <div class="container">
        <div class="card card-filter mx-auto">
            <h5 class="card-header card-header-filter">
                <div class="title-filter">
                    <h5>Profile</h5>
                </div>
                <div class="card-body">
                    <form class="form-filter">
                        <!-- email -->
                        <div class="form-group row">
                            <label for="inputEmail" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
                            <div class="col-sm-8">
                                <input type="text" id="inputEmail"
                                    class="input-disable form-control form-control-lg bg-secondary" value="<%=email %>"
                                    placeholder="Email" disabled>
                            </div>
                        </div>

                        <!-- password -->
                        <div class="form-group row">
                            <label for="inputPassword"
                                class="col-sm-2 col-form-label col-form-label-lg">Password</label>
                            <div class="col-sm-8 ">
                                <input type="password" id="inputPassword" class="form-control form-control-lg"
                                    placeholder="Password" required="">
                            </div>
                        </div>

                        <!-- Position -->

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label col-form-label-lg">Position</label>
                            <div class="col-sm-8 radios">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio1" name="customRadio" value="customRadioManager"
                                        class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio1">Manager</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio2" name="customRadio" value="customRadioSd"
                                        class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio2">Software Developer</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio3" name="customRadio" value="customRadioQa"
                                        class=" custom-control-input" disabled>
                                    <label class="custom-control-label" for="customRadio3">Quality Assurance</label>
                                </div>

                            </div>
                        </div>

                        <!-- Partime/fulltime -->
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label col-form-label-lg">Type</label>
                            <div class="col-sm-8 radios">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio4" name="customRadio" value="customRadioFullTime"
                                        class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio4">Fulltime</label>
                                </div>
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="customRadio5" name="customRadio" value="customRadioPartTime"
                                        class="custom-control-input">
                                    <label class="custom-control-label" for="customRadio5">Partime</label>
                                </div>


                            </div>
                        </div>

                        <div class="form-group row container-search">
                            <button type="submit" name="search" value="clicked"
                                class=" btn btn-success btn-lg btn-search">Update</button>
                        </div>

                    </form>

                </div>
        </div>
    </div>

</section>

<%- include('partials/footer'); -%>