<%- include('../../partials/header'); -%>


<div class="sidebar-custom container-fluid">
  <div class="row">
    <nav class="box-sidebar col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">

          <li class="nav-item active-custom">
            <a class="text-sidebar nav-link " href="/projects/overview/<%= url %>">
              <span data-feather="shopping-cart"></span>
              Overview
            </a>
          </li>
          <li class="nav-item">
            <a class=" text-sidebar nav-link" href="/projects/activity/<%= url %>">
              <span data-feather="users"></span>
              Activity
            </a>
          </li>
          <li class="nav-item ">
            <a class=" text-sidebar nav-link" href="/projects/members/<%= url %>">
              <span data-feather="bar-chart-2"></span>
              Members
            </a>
          </li>
          <li class="nav-item">
            <a class=" text-sidebar nav-link" href="/projects/issues/<%= url %>">
              <span data-feather="layers"></span>
              Issue
            </a>
          </li>
        </ul>



      </div>
    </nav>
    <!-- insert here -->
    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <h1 class="activity-card">Overview</h1>
      <h4 class="title-activity">#<%= url%> <%=projectName%></h4>
      <hr>

      <div class="row">
          <div class="col-10 offset-1">
              <div class="card issue-tracker">
                  <div class="card-header">
                      <h5>Issue Tracker</h5>
                  </div>
                  <div class="card-body">
                      <div class="card">
                          <ul class="list-group list-group-flush">
                              <li class="list-group-item">
                                  <div class="row">
                                      <h6 class="col" style="text-align: left;">Bug</h6>
                                      <%const{openBug,totalBug}=bug %>
                                      <div style="text-align: right;">
                                          <h5><span class="badge badge-warning" style="text-align: right;">
                                                  <%=openBug%> Open /<%=totalBug %></span>
                                          </h5>
                                      </div>
                                  </div>
                              </li>
                              <li class="list-group-item">
                                  <div class="row">
                                      <h6 class="col" style="text-align: left;">Feature</h6>
                                      <%const{openFeature,totalFeature}=feature %>

                                      <div style="text-align: right;">
                                          <h5><span class="badge badge-primary" style="text-align: right;">
                                                  <%=openFeature%> Open /<%=totalFeature %></span></h5>
                                      </div>
                                  </div>
                              </li>
                              <li class="list-group-item">
                                  <div class="row">
                                      <h6 class="col" style="text-align: left;">Support</h6>
                                      <%const{openSupport,totalSupport}=support %>

                                      <div style="text-align: right;">
                                          <h5><span class="badge badge-info" style="text-align: right;">
                                                  <%=openSupport%> Open /<%=totalSupport%></span></h5>
                                      </div>
                                  </div>
                              </li>
                          </ul>
                      </div>
                  </div>
              </div>
          </div>
      </div>

      <br>

      <div class="row">
          <div class="col-10 offset-1">
              <div class="card issue-tracker">
                  <div class="card-header">
                      <h5>Members</h5>
                  </div>
                  <div class="card-body">
                      <div class="card">
                          <ul class="list-group list-group-flush">
                              <% members.forEach(member=>{ %>
                                <li class="list-group-item">
                                  <div class="row">
                                      <h6 class="col" style="text-align: left;"><%= member.fullname %></h6>
                                      <div style="text-align: right;">
                                          <span class="badge badge-secondary"
                                              style="text-align: right;"><%= member.role %> </span>
                                      </div>
                                  </div>
                              </li>
                              <%})%>
                              
                              
                              
                          </ul>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </main>
</div>
    <!-- end of row -->
  </div>
</div>


<footer>
  <section class="overview ">
    <div class="footer-container container-fluid">
      <p class="copy-right text-center text-md-center">
        Projects System Management 2020 Â©
      </p>
      <i class="social-icon fab fa-facebook-f"></i>
      <i class="social-icon fab fa-twitter"></i>
      <i class="social-icon fab fa-instagram"></i>
      <i class="social-icon fas fa-envelope"></i>
    </div>
  </section>
</footer>

</html>