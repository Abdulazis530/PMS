<%- include('../../partials/header'); -%>


<div class="sidebar-custom container-fluid">
  <div class="row">
    <nav class="box-sidebar col-md-2 d-none d-md-block bg-light sidebar">
      <div class="sidebar-sticky">
        <ul class="nav flex-column">

          <li class="nav-item ">
            <a class="text-sidebar nav-link " href="/projects/overview/<%= url %>">
              <span data-feather="shopping-cart"></span>
              Overview
            </a>
          </li>
          <li class="nav-item ">
            <a class=" text-sidebar nav-link" href="/projects/activity/<%= url %>">
              <span data-feather="users"></span>
              Activity
            </a>
          </li>
          <li class="nav-item active-custom">
            <a class=" text-sidebar nav-link" href="/projects/members/<%= url %>">
              <span data-feather="bar-chart-2"></span>
              Members
            </a>
          </li>
          <li class="nav-item">
            <a class=" text-sidebar nav-link" href="#">
              <span data-feather="layers"></span>
              Issue
            </a>
          </li>
        </ul>

      </div>
    </nav>

    <main role="main" class=" filter-members col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
      <section id="filter">
        <h1 class="title">UPDATE MEMBER </h1>
        <div class="container">
          <div class="card card-filter mx-auto">
            <h5 class="card-header card-header-filter">
              <div class="title-filter">
                <h5>Edit</h5>
              </div>
              <div class="card-body">
                <form class="form-filter" method="POST">

                  <!--Name -->
                  <div class="form-group row">
                    <label for="inputIdMembers"
                      class=" add-overview-members col-sm-2 col-form-label col-form-label-lg">Name</label>
                    <div class="col-sm-8 ">
                        <input  class="custom-select form-control form-control-lg" name="editMembers" type="text"  id="editMembers" style="height: 100%; font-size: 1.2rem;" value="<%=data.fullname%>" disabled >
                       
                    
                    </div>
                  </div>

              
                  <!-- SELECT ROLE MEMBERS -->
                  <div class="form-group row">
                    <label for="inputRoleMembers" class="col-sm-2 col-form-label">Position</label>
                    <div class="col-sm-8">
                      <select name="inputRoleMembers" style="height: 100%; font-size: 1.2rem;"
                        class="custom-select form-control form-control-lg" id="inputRoleMembers">
                        <option selected>Open this select menu</option>

                        <% selectRoles.forEach(selectRole=>{ %>
                        <option value="<%= selectRole.position %>"><%= selectRole.position %></option>

                        <%})%>

                      </select>
                    </div>
                  </div>
                  <!-- END OF ROLE MEMBERS -->
                  <!-- Members -->

                  <div class="form-group row container-search">
                    <button type="submit" name="search" value="clicked"
                      class=" btn btn-success btn-lg btn-search btn-projects-add-updt"><%=typeof projectName !='undefined' ? "Edit" :"Update"%></button>
                    <a href="/projects/members/<%= url %>" name="kembali" value="clicked"
                      class=" btn btn-primary btn-lg btn-projects-back">
                      Kembali</a>
                  </div>
                </form>

              </div>
          </div>
        </div>

      </section>

    </main>



  </div>
</div>

<footer>
  <section class="overview ">
    <div class="footer-container container-fluid">
      <p class="copy-right text-center text-md-center">
        Projects System Management 2020 Â©
      </p>
      <i class="social-icon fab fa-facebook-f"></i>
      <i class="social-icon fab fa-twitter"></i>
      <i class="social-icon fab fa-instagram"></i>
      <i class="social-icon fas fa-envelope"></i>
    </div>
  </section>
</footer>

</html>