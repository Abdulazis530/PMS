<%- include('../../partials/header'); -%>
<nav class="navbar navbar-expand-lg navbar-dark">
    <a class="navbar-brand" href="#"><img class="mb-4" src="/images/faviconwhite.ico" alt="" width="42" height="42">
        Project Management System</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="/projects">Projects <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
            </li>


        </ul>

        <a href="/logout" class="btn btn-logout btn-lg btn-danger my-2 my-sm-0"> logout</a>


    </div>
</nav>

<div class="container-fluid container-activity">
    <div class="row">

        <nav class="box-sidebar col-md-2 d-none d-md-block bg-light sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">

                    <li class="nav-item active-custom">
                        <a class="text-sidebar nav-link " href="/projects/overview/<%= url %>">
                            <span data-feather="shopping-cart"></span>
                            Overview
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class=" text-sidebar nav-link" href="#">
                            <span data-feather="users"></span>
                            Activity
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class=" text-sidebar nav-link" href="/projects/members/<%= url %>">
                            <span data-feather="bar-chart-2"></span>
                            Members
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class=" text-sidebar nav-link" href="/projects/issues/<%= url %>">
                            <span data-feather="layers"></span>
                            Issue
                        </a>
                    </li>
                </ul>



            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
            <div class="content">
                <h1 style="text-align: center;">Log Activity</h1>
                <h4 style="text-align: center;"><%= projectid %> <%=project.name%></h4>
                <hr>
                
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 offset-sm-2">
                            <br>
                      <%  activities.forEach(activity=>{ %>
                        <% const{description,author,timeactivity,dateactivity,title,previousdone, currentdone}=activity %>
                      
                            <div class="card">
                                <div class="card-header text-center">
                                    <h5><%=dateactivity%></h5>
                                </div>
    
                                <div class="card-body">
                                    <h5 class="card-title"><%=title%></h5>
                                    <p class="card-text"><%= description%></p>
        
                                    <p>Done (%): from <strong><%=previousdone%>%</strong> updated to <strong><%= currentdone%> %</strong></p>
                                    <div class="progress">
                                      <%  if(currentdone==previousdone){ %>
                                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                            style="width:<%=Number(previousdone)%>%" aria-valuenow="<%= Number(previousdone)%>" aria-valuemin="0" aria-valuemax="100">
                                           <%= `${previousdone} (No Change)` %></div>

                                     <% }else{ %>
                                        <% const subtractDone=Number(currentdone)-Number(previousdone) %>
                                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                        style="width:<%=Number(previousdone)%>%" aria-valuenow="<%= Number(previousdone)%>" aria-valuemin="0" aria-valuemax="100">
                                        <%= previousdone %> %</div>
                                    <div class="progress-bar progress-bar-striped bg-info" role="progressbar"
                                        style="width: <%= subtractDone%>%" aria-valuenow="<%= subtractDone%>%" aria-valuemin="0" aria-valuemax="100">
                                        <%= subtractDone%>% </div>
                                      <%}%>
                                       
                                    </div>
                                    <br>
                                    <h5 style="text-align: center;">Author : <%=author %>
                                        <span class="badge badge-info"><%=timeactivity %> WIB</span></h5>
                                </div>
                                <hr>
        
                            </div>
                          
                            <% }) %>
                          
        
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>


<%- include('../../partials/footer'); -%>